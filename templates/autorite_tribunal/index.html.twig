{% extends 'base.html.twig' %}

{% block title %}Liste autorités (tribunal){% endblock %}

{% block body %}
    <h1>Liste des autorités (tribunal)</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Autorité</th>
          
            </tr>
        </thead>
        <a href="{{ path('autorite_tribunal_new') }}"><button>Nouveau</button></a>
        <tbody>
        {% for autorite_tribunal in autorite_tribunals %}
            <tr>
                <td>{{ autorite_tribunal.autoriteNom }}</td>
                <td>
                    <a href="{{ path('autorite_tribunal_show', {'id': autorite_tribunal.id}) }}"><button>Voir</button></a>
                    <a href="{{ path('autorite_tribunal_edit', {'id': autorite_tribunal.id}) }}"><button>Modifier</button></a>
                </td>
                <td>
                    {{ include('autorite_tribunal/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune autorité (tribunal) enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('autorite_tribunal_new') }}"><button>Nouveau</button></a>
{% endblock %}