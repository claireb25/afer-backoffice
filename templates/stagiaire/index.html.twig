{% extends 'base.html.twig' %}

{% block title %}Stagiaire index{% endblock %}

{% block body %}
    <h1>Stagiaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Nom_naissance</th>
                <th>Prenom</th>
                <th>Date_naissance</th>
                <th>Lieu_naissance</th>
                <th>Adresse</th>
                <th>Code_postal</th>
                <th>Commune</th>
                <th>Pays</th>
                <th>Tel_portable</th>
                <th>Tel_fixe</th>
                <th>Email</th>
                <th>Carte_avantages_jeunes</th>
                <th>Partenaires</th>
                <th>Adherents</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stagiaire in stagiaires %}
            <tr>
                <td>{{ stagiaire.id }}</td>
                <td>{{ stagiaire.nom }}</td>
                <td>{{ stagiaire.nomNaissance }}</td>
                <td>{{ stagiaire.prenom }}</td>
                <td>{{ stagiaire.dateNaissance ? stagiaire.dateNaissance|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ stagiaire.lieuNaissance }}</td>
                <td>{{ stagiaire.adresse }}</td>
                <td>{{ stagiaire.codePostal }}</td>
                <td>{{ stagiaire.commune }}</td>
                <td>{{ stagiaire.pays }}</td>
                <td>{{ stagiaire.telPortable }}</td>
                <td>{{ stagiaire.telFixe }}</td>
                <td>{{ stagiaire.email }}</td>
                <td>{{ stagiaire.carteAvantagesJeunes ? 'Yes' : 'No' }}</td>
                <td>{{ stagiaire.partenaires ? 'Yes' : 'No' }}</td>
                <td>{{ stagiaire.adherents ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('stagiaire_show', {'id': stagiaire.id}) }}">show</a>
                    <a href="{{ path('stagiaire_edit', {'id': stagiaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('stagiaire_new') }}">Create new</a>
{% endblock %}