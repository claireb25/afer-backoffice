{% extends 'base.html.twig' %} {% block title %}Stagiaire index{% endblock %} {% block body %}
<h1>Liste des stagiaires</h1>

<table class="table">
    <thead>
        <tr>
            <!--<th>Id</th>-->
            <th>Nom</th>
            <!--<th>Nom de naissance</th>-->
            <th>Prénom</th>
            <th>Date de naissance</th>
            <!--<th>Lieu de naissance</th>-->
            <!--<th>Adresse</th>-->
            <th>Code postal</th>
            <th>Commune</th>
            <!--<th>Pays</th>-->
            <th>Tél portable</th>
            <!--<th>Tel fixe</th>-->
            <th>Email</th>
            <!--<th>Carte avantages jeunes</th>-->
            <!--<th>Partenaires</th>-->
            <!--<th>Adhérents</th>-->
            <!--<th>actions</th>-->
        </tr>
    </thead>
    <tbody>
        <a href="{{ path('stagiaire_new') }}">
            <button> + Nouveau</button>
        </a>
        {% for stagiaire in stagiaires %}
        <tr>
            <!--<td>{{ stagiaire.id }}</td>-->
            <td>{{ stagiaire.nom }}</td>
            <!--<td>{{ stagiaire.nomNaissance }}</td>-->
            <td>{{ stagiaire.prenom }}</td>
            <td>{{ stagiaire.dateNaissance ? stagiaire.dateNaissance|date('Y-m-d H:i:s') : '' }}</td>
            <!--<td>{{ stagiaire.lieuNaissance }}</td>-->
            <!--<td>{{ stagiaire.adresse }}</td>-->
            <td>{{ stagiaire.codePostal }}</td>
            <td>{{ stagiaire.commune }}</td>
            <!--<td>{{ stagiaire.pays }}</td>-->
            <td>{{ stagiaire.telPortable }}</td>
            <!--<td>{{ stagiaire.telFixe }}</td>-->
            <td>{{ stagiaire.email }}</td>
            <!--<td>{{ stagiaire.carteAvantagesJeunes ? 'Yes' : 'No' }}</td>-->
            <!--<td>{{ stagiaire.partenaires ? 'Yes' : 'No' }}</td>-->
            <!--<td>{{ stagiaire.adherents ? 'Yes' : 'No' }}</td>-->
            <td>
                <a href="{{ path('stagiaire_show', {'id': stagiaire.id}) }}">
                    <button>Voir</button>
                </a>
            </td>
            <td>
                <a href="{{ path('stagiaire_edit', {'id': stagiaire.id}) }}">
                    <button>Modifier</button>
                </a>

            </td>
            <td>
                {{ include('stagiaire/_delete_form.html.twig') }}
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="17">Aucun stagiaire enregistré</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('stagiaire_new') }}"> + Nouveau</a>
{% endblock %}