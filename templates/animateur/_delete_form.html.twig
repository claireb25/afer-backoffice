<form method="post" action="{{ path('animateur_delete', {'id': animateur.id}) }}" onsubmit="return confirm('Êtes vous sûre de vouloir supprimer l'animateur : {{ animateur.nom }} ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ animateur.id) }}">
    <button class="btn">Supprimer l'animateur</button>
</form>