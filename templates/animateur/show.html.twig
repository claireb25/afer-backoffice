{% extends 'base.html.twig' %}

{% block title %}Animateur{% endblock %}

{% block body %}
    <h1>Animateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ animateur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ animateur.prenom }}</td>
            </tr>
            <tr>
                <th>Gta</th>
                <td>{{ animateur.gta ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Raison sociale</th>
                <td>{{ animateur.raisonSociale }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ animateur.adresse }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ animateur.codePostal }}</td>
            </tr>
            <tr>
                <th>Commune</th>
                <td>{{ animateur.commune }}</td>
            </tr>
            <tr>
                <th>Région</th>
                <td>{{ animateur.region }}</td>
            </tr>
            <tr>
                <th>Téléphone portable</th>
                <td>{{ animateur.telPortable }}</td>
            </tr>
            <tr>
                <th>Téléphone fixe</th>
                <td>{{ animateur.telFixe }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ animateur.email }}</td>
            </tr>
            <tr>
                <th>Urssaf</th>
                <td>{{ animateur.urssaf }}</td>
            </tr>
            <tr>
                <th>Siret</th>
                <td>{{ animateur.siret }}</td>
            </tr>
            <tr>
                <th>Kilomètres aller/retour</th>
                <td>{{ animateur.kmAR }}</td>
            </tr>
            <tr>
                <th>Repas</th>
                <td>{{ animateur.repas ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('animateur_index') }}"><button>Retour</button></a>

    <a href="{{ path('animateur_edit', {'id': animateur.id}) }}"><button>Modifier</button></a>

    {{ include('animateur/_delete_form.html.twig') }}
