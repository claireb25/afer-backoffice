{% extends 'base.html.twig' %}

{% block title %}Liste des autorités (préfecture){% endblock %}

{% block body %}
    <h1>Liste des autorités (préfecture)</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Autorité</th>
    
            </tr>
        </thead>
         <a href="{{ path('autorite_prefecture_new') }}"><button>Nouveau</button></a>
        <tbody>
        {% for autorite_prefecture in autorite_prefectures %}
            <tr>
                <td>{{ autorite_prefecture.autoriteNom }}</td>
                <td>
                    <a href="{{ path('autorite_prefecture_show', {'id': autorite_prefecture.id}) }}"><button>Voir</button></a>
                    <a href="{{ path('autorite_prefecture_edit', {'id': autorite_prefecture.id}) }}"><button>Modifier</button></a>
                </td>
                <td>
                    {{ include('autorite_prefecture/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune autorité (préfecture) enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('autorite_prefecture_new') }}"><button>Nouveau</button></a>
{% endblock %}