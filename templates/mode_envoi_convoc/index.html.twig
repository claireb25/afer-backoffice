                <td>{{ mode_envoi_convoc.email ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('mode_envoi_convoc_show', {'id': mode_envoi_convoc.id}) }}">show</a>
                    <a href="{{ path('mode_envoi_convoc_edit', {'id': mode_envoi_convoc.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun mode d'envoi enregistr√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mode_envoi_convoc_new') }}">Create new</a>
{% endblock %}