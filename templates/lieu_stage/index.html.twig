                <a href="{{ path('lieu_stage_show', {'id': lieu_stage.id}) }}">
                    <button>Voir</button>
                </a>
            </td>
            <td>
                <a href="{{ path('lieu_stage_edit', {'id': lieu_stage.id}) }}">
                    <button>Modifier</button>
                </a>

            </td>
            <td>
                {{ include('lieu_stage/_delete_form.html.twig') }}
            </td>
        </tr>
