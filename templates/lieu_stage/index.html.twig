{% extends 'base.html.twig' %} {% block title %}Liste lieux stage{% endblock %} {% block body %}
<h1>Liste des lieux de stage</h1>

<table class="table">
    <thead>
        <tr>
            <!--<th>Id</th>-->
            <th>Lieu de stage</th>
