            <th>Tel</th>
            <!--<th>Latitude</th>-->
            <!--<th>Longitude</th>-->
            <!--<th>Divers</th>-->
        </tr>
    </thead>
    <tbody>
        <a href="{{ path('lieu_stage_new') }}">
            <button> + Nouveau</button>
        </a>
        {% for lieu_stage in lieu_stages %}
        <tr>
            <!--<td>{{ lieu_stage.id }}</td>-->
            <td>{{ lieu_stage.lieuNom }}</td>
            <td>{{ lieu_stage.etablissementNom }}</td>
