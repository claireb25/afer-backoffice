{% extends 'base.html.twig' %}

{% block title %}Stage index{% endblock %}

{% block body %}
    <h1>Stage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Stage_numero</th>
                <th>Date</th>
                <th>Stage_hpo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stage in stages %}
            <tr>
                <td>{{ stage.id }}</td>
                <td>{{ stage.stageNumero }}</td>
                <td>{{ stage.date ? stage.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ stage.stageHpo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('stage_show', {'id': stage.id}) }}">Voir</a>
                    <a href="{{ path('stage_edit', {'id': stage.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun stage enregistr√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('stage_new') }}">Nouveau</a>
{% endblock %}