{% extends 'base.html.twig' %}

{% block title %}Prefecture index{% endblock %}

{% block body %}
    <h1>Prefecture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prefecture_nom</th>
                <th>Adresse</th>
                <th>Code_postal</th>
                <th>Commune</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prefecture in prefectures %}
            <tr>
                <td>{{ prefecture.id }}</td>
                <td>{{ prefecture.prefectureNom }}</td>
                <td>{{ prefecture.adresse }}</td>
                <td>{{ prefecture.codePostal }}</td>
                <td>{{ prefecture.commune }}</td>
                <td>
                    <a href="{{ path('prefecture_show', {'id': prefecture.id}) }}">show</a>
                    <a href="{{ path('prefecture_edit', {'id': prefecture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('prefecture_new') }}">Create new</a>
{% endblock %}