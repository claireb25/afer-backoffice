<form method="post" action="{{ path('prefecture_delete', {'id': prefecture.id}) }}" onsubmit="return confirm('Êtes vous sûre de vouloir supprimer la préfecture : {{ prefecture.prefectureNom }} ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prefecture.id) }}">
    <button class="btn">Supprimer</button>
</form>