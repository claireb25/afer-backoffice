{% extends 'base.html.twig' %}

{% block title %}Civilite index{% endblock %}

{% block body %}
    <h1>Civilite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for civilite in civilites %}
            <tr>
                <td>{{ civilite.id }}</td>
                <td>{{ civilite.nom }}</td>
                <td>
                    <a href="{{ path('civilite_show', {'id': civilite.id}) }}">Voir</a>
                    <a href="{{ path('civilite_edit', {'id': civilite.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune civilité enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('civilite_new') }}">Nouveau</a>
{% endblock %}