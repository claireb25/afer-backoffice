{% extends 'base.html.twig' %}

{% block title %}Suivi dossiers{% endblock %}

{% block body %}
    <h1>Liste des suivis de dossiers</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Paye</th>
                <th>Reception du bulletin inscription</th>
                <th>Copie cni</th>
                <th>Copie permis</th>
                <th>Releve integral</th>
                <th>Decision judiciaire</th>
                <th>Lettre 48n</th>
                <th>Observations</th>
            </tr>
        </thead>
        <tbody>
        <a href="{{ path('suivi_dossier_new') }}"><button> + nouveau</button></a>
        {% for suivi_dossier in suivi_dossiers %}
            <tr>
                <td>{{ suivi_dossier.paye ? 'Oui' : 'Non' }}</td>
                <td>{{ suivi_dossier.receptionBulletinInscription ? 'Oui' : 'Non' }}</td>
                <td>{{ suivi_dossier.copieCni ? 'Oui' : 'Non' }}</td>
                <td>{{ suivi_dossier.copiePermis ? 'Oui' : 'Non' }}</td>
                <td>{{ suivi_dossier.releveIntegral ? 'Oui' : 'Non' }}</td>
                <td>{{ suivi_dossier.decisionJudiciaire ? 'Oui' : 'Non' }}</td>
                <td>{{ suivi_dossier.lettre48n ? 'Oui' : 'Non' }}</td>
                <td>{{ suivi_dossier.observations }}</td>
                <td><a href="{{ path('suivi_dossier_show', {'id': suivi_dossier.id}) }}"><button>Voir</button></a></td>
                <td><a href="{{ path('suivi_dossier_edit', {'id': suivi_dossier.id}) }}"><button>Modifier</button></a></td>
                <td>{{ include('suivi_dossier/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun suivis de dossier enregistr√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('suivi_dossier_new') }}"><button> + nouveau</button></a>
{% endblock %}