{% extends 'base.html.twig' %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('build/css/app.css') }}">{% endblock %}
{% block title %}Tribunal index{% endblock %}

{% block body %}

    <h1>Tribunaux</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Tribunal nom</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Commune</th>
            </tr>
        </thead>
        <tbody>
        <p>
            <a href="{{ path('tribunal_new') }}">Nouveau tribunal</a>
        </p>
        {% for tribunal in tribunals %}
            <tr>
                <td>{{ tribunal.tribunalNom }}</td>
                <td>{{ tribunal.adresse }}</td>
                <td>{{ tribunal.codePostal }}</td>
                <td>{{ tribunal.commune }}</td>
                <td>
                    <a href="{{ path('tribunal_edit', {'id': tribunal.id}) }}">Modifier</a>
                </td>
                <td>
                {{ include('tribunal/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun tribinual enregistr√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  
{% endblock %}