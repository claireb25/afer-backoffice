{% extends 'base.html.twig' %}

{% block title %}Liste des forfaits{% endblock %}

{% block body %}
    <h1>Liste des forfaits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Forfaits</th>

            </tr>
        </thead>
         <a href="{{ path('forfait_animateur_new') }}"><button>Nouveau</button></a>
        <tbody>
        {% for forfait_animateur in forfait_animateurs %}
            <tr>
                <td>{{ forfait_animateur.forfaitPrix }} €</td>
                <td>
                    <a href="{{ path('forfait_animateur_show', {'id': forfait_animateur.id}) }}"><button>Voir</button></a>
                    <a href="{{ path('forfait_animateur_edit', {'id': forfait_animateur.id}) }}"><button>Modifier</button></a>
                </td>
                <td>
                    {{ include('forfait_animateur/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun forfait enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('forfait_animateur_new') }}"><button>Nouveau</button></a>
{% endblock %}